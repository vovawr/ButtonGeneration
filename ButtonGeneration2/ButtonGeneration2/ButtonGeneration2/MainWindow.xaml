<Window x:Class="ButtonGeneration2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonGeneration2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <ListBox Name="lbTest" MinHeight="200">
                    
                </ListBox>
                  
               <StackPanel Orientation="Horizontal" Margin="5">
                   <Button Padding="10" Margin="5" Name="btnDown" Click="btnDown_Click">
                    Назад
                   </Button>
              
                <StackPanel x:Name="spButton" Margin="20" Orientation="Horizontal">

                </StackPanel>

                <Button Padding="10" Name="btnUP" Click="btnDown_Click" Margin="5">Вперед</Button>
            </StackPanel>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
